{
  "compileOnSave": false,
  "compilerOptions": {
    "target":                       "es6",
    "module":                       "esnext",
    "moduleResolution":             "node",
    "declaration":                  true,
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    "allowSyntheticDefaultImports": true,
    "strict":                       true,
    "noImplicitAny":                true,
    "sourceMap":                    true,
    "outDir":                       "./dist",
    "baseUrl":                      "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "./dist",
    "node_modules"
  ],
  "tslint": {
    "configFile": "./tslint.json"
  }
}
